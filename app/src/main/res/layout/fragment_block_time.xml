<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.schedulix.Fragments.RescheduleAppointment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvBlockTimes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/addBlockTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_plus"
        fab:fab_size="normal"
        fab:fab_label="@string/add_appointment"
        app:fab_colorNormal="@color/drawer_bg"
        app:fab_colorPressed="@color/black"
        app:fab_colorRipple="@color/black"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        />



    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/no_record_found" />


</FrameLayout>

